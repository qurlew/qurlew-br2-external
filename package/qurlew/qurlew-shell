if [ "$1" = -c ]
then
	shift
	exec /bin/sh -c "echo $1 | $0"
elif [ -n "$1" ]
then
	echo "Usage: ${0##*/} -c URL" >&2
	exit 1
fi

exec nc -NU /var/run/qurlew/socket
